<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<%= form_for(@message,html: {class: 'form-horizonatal'}) do |f| %>
 <div class="form-group">
名前:
<label for="message_name" class="col-sm-2 control-label">名前</label>
    <div class="col-sm-6">
  <%= f.text_area :name,class: "form-control",rows: "1",cols: "10" %>
  内容:
  <%= f.text_area :body,class: "form-control",rows: "1",cols: "25" %>
  <%= f.submit class: "btn btn-sm btn-primary" %>
</div>
<% end %>
